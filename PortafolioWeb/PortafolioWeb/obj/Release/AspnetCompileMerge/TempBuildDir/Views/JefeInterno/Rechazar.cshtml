@model PortafolioWeb.Models.SolicitudViewModel
@{
    Layout = null;
}
@Styles.Render("~/Content/snoAlertBox.css")
@using (Html.BeginForm("Rechazar", "JefeInterno", FormMethod.Post, new { id = "popupForm" }))
{
    if (Model != null && Model.solicitud.ID_SOLICITUD > 0)
    {
        @Html.HiddenFor(a => a.solicitud.ID_SOLICITUD)
    }
    <div>
        <br />
        <div align="center">
            <h3> ¿Desea continuar?</h3>
            <h5> Esta acción no se puede deshacer</h5>
        </div>

        <br />
        <div align="center">
            <button type="submit" id="boton" class="btn btn-primary btn-sm">Confirmar</button>
        </div>
    </div>
}