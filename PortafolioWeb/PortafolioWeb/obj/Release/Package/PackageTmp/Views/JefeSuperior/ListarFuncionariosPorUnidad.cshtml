<form class="well form-horizontal" method="post">
    <fieldset>
        <div class="form-group">
            @Html.LabelFor(model => model.UNIDAD, "Seleccione una unidad", new { @class = "control-label col-md-4" })
            <div class="col-md-4 selectContainer">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                    @Html.DropDownListFor(model => model.Unidades, new SelectList(Model.Unidades, "ID_UNIDAD", "NOMBRE_UNIDAD"), "- Por favor seleccione -", new { id = "Unidad", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Unidades, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-4 control-label"></label>
            <div class="col-md-4" align="center">
                <button type="submit" id="boton" class="btn btn-primary btn-sm">Listar</button>
            </div>
        </div>
    </fieldset>
</form>
<br />

<div class="container">

    <form class="well form-horizontal">
        <fieldset class="table-responsive">

            <!-- Form Name -->
            <legend>Consulta de Permiso</legend>

            <div style="width:90%; margin:0 auto" class="tablecontainer">
                <table class="table" id="table_">
                    <thead>
                        <tr>
                            <th>Rut Funcionario</th>
                            <th>Nombre Completo</th>
                            <th>Email</th>
                            <th>Acción</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </fieldset>
    </form>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            try {
                var rut = '@Session["rut"].ToString()';

                var unidad = '@TempData["unidad"]';
            } catch (e) {
                return window.location.href = "/";
            }

        var table = $("#table_").DataTable({
            language: {
                url: "https://cdn.datatables.net/plug-ins/1.10.16/i18n/Spanish.json"
            },
            destroy: true,
            responsive: true,
            ajax:{
                url: "/JefeSuperior/GetFuncionariosPorUnidad",
                type: "GET",
                dataType: "JSON",
                responsive: true,
                data: {
                    unidad: unidad,
                    function (data) {
                        return JSON.stringify(data);
                    }
                },
                dataSrc: "",
                error: function () {
                    alert("Algo salió mal.")
                },
            },
            columns: [
                { "data": "RUT", "autoWidth": true },
                { "data": "NOMBRECOMPLETO", "autoWidth": true },
                { "data": "EMAIL", "autoWidth": true },
                {
                    "data": null, "width": "100px", "render": function (data, type, row) {
                        if (data.ID_ESTADO == 10) {
                           return '<a class="popup" href="/JefeInterno/Evaluar/' + "x" + '">Consultar situación</a>';
                        }
                        else {
                            return 'Sin acción';
                        }
                    }
                },
            ]
        })
    })
    </script>
}