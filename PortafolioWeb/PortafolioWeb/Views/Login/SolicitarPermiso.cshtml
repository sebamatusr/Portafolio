@model PortafolioWeb.SOLICITUD
@{
    ViewBag.Title = "SolicitarPermiso";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Atrás", "Index", "Home")</li>
                <li>@Html.ActionLink("Solicitar Permiso", "SolicitarPermiso", "Login")</li>
                <li>@Html.ActionLink("Consultar Permisos", "PermisosSelf", "Login")</li>
                <li>@Html.ActionLink("Cerrar Sesión", "EndSession", "Login")</li>
            </ul>
        </div>
    </div>
</div>
<h2>Solicitud de permisos</h2>

<div class="form-group">
    
    <div class="col-md-10">
        @Html.Label("Tipo de solicitud", htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.Editor("Tipo solicitud", new { htmlAttributes = new { @class = "form-control" } })
        
    </div>
    <div class="col-md-10">
        @Html.Label("Motivo de solicitud", htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.Editor("Motivo de solicitud", new { htmlAttributes = new { @class = "form-control" } })

    </div>
    <div class="col-md-10">
        @Html.Label("Ingrese el detalle de la solicitud", htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.TextArea("Ingrese el detalle de la solicitud", new { htmlAttributes = new { @class = "form-control" } })

    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Ingresar solicitud" class="btn btn-default" />
        </div>
    </div>

</div>

